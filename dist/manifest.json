{
  "manifest_version": 3,
  "name": "Grok Work With Chrome",
  "version": "1.0",
  "description": "Grok in your browser sidepanel",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "commands",
    "windows"
  ],
  "action": {
    "default_title": "Open Grok Work With Chrome",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/icon.css"]
    }
  ],
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take a screenshot and send to Grok Work With Chrome"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://api.x.ai/*",
    "<all_urls>"
  ]
}
