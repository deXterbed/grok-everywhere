{
  "manifest_version": 3,
  "name": "Grok everywhere",
  "version": "1.2.0",
  "description": "Grok in your browser sidepanel",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "commands",
    "windows"
  ],
  "action": {
    "default_title": "Open Grok everywhere",
    "default_icon": {
      "16": "icons/grok.png",
      "32": "icons/grok.png",
      "48": "icons/grok.png",
      "128": "icons/grok.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/icon.css"]
    }
  ],
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take a screenshot and send to Grok everywhere"
    },
    "extract-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Extract page content and send to Grok everywhere"
    }
  },
  "icons": {
    "16": "icons/grok.png",
    "32": "icons/grok.png",
    "48": "icons/grok.png",
    "128": "icons/grok.png"
  },
  "host_permissions": ["https://api.x.ai/*", "<all_urls>"]
}
