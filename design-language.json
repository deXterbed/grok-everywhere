{
  "colorScheme": {
    "background": "rgb(0, 0, 0)",
    "textColor": "rgb(255, 255, 255)",
    "secondaryBackground": "rgba(32, 32, 32, 0.8)",
    "accentElements": "rgb(128, 128, 128)"
  },
  "typography": {
    "primaryFont": "System default sans-serif",
    "headingSize": "20px",
    "bodyTextSize": "16px",
    "fontWeight": {
      "regular": "400",
      "bold": "600"
    }
  },
  "layout": {
    "containerType": "Card-based",
    "padding": "16px",
    "borderRadius": "12px",
    "maxWidth": "600px"
  },
  "components": {
    "header": {
      "logo": "X/Grok branded icon",
      "navigationIcons": ["expand", "close"],
      "spacing": "16px"
    },
    "userProfile": {
      "avatar": {
        "size": "32px",
        "shape": "circular"
      }
    },
    "messageBubbles": {
      "background": "rgba(32, 32, 32, 0.8)",
      "borderRadius": "8px",
      "padding": "12px"
    },
    "sourceIndicators": {
      "type": "Pill-shaped tags",
      "display": "Horizontal stack",
      "content": {
        "postsCount": "10 posts",
        "webPages": "8 web pages"
      }
    },
    "inputField": {
      "style": "Floating bar",
      "placeholder": "Ask anything",
      "icon": "Paperclip",
      "sendButton": "Arrow"
    }
  },
  "interactiveElements": {
    "buttons": {
      "style": "Pill-shaped",
      "background": "rgba(32, 32, 32, 0.8)",
      "hoverState": "Slightly lighter"
    },
    "tags": {
      "style": "Pill-shaped",
      "background": "rgba(32, 32, 32, 0.8)"
    }
  },
  "darkMode": {
    "primary": true,
    "contrast": "High",
    "accentColor": "White"
  }
}